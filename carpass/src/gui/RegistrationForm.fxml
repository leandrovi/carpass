<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="332.0" prefWidth="498.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.RegistrationFormController">
   <children>
      <Label text="Nova Conta">
         <font>
            <Font size="24.0" />
         </font>
         <VBox.margin>
            <Insets />
         </VBox.margin>
      </Label>
      <Label text="Nome">
         <VBox.margin>
            <Insets top="20.0" />
         </VBox.margin>
      </Label>
      <TextField fx:id="txtName" maxWidth="-Infinity" />
      <Label fx:id="labelErrorEmail" textFill="RED">
         <VBox.margin>
            <Insets />
         </VBox.margin>
      </Label>
      <Label text="E-mail">
         <VBox.margin>
            <Insets top="5.0" />
         </VBox.margin>
      </Label>
      <TextField fx:id="txtEmail" maxWidth="-Infinity" />
      <Label fx:id="labelErrorPassword" textFill="RED" />
      <Label text="Senha">
         <VBox.margin>
            <Insets top="5.0" />
         </VBox.margin>
      </Label>
      <PasswordField fx:id="txtPassword" alignment="CENTER" maxWidth="-Infinity" />
      <CheckBox fx:id="cbProvider" mnemonicParsing="false" text="Sou prestador">
         <VBox.margin>
            <Insets top="20.0" />
         </VBox.margin>
      </CheckBox>
      <Button fx:id="btCreateNewAccount" mnemonicParsing="false" onAction="#onBtCreateNewAccountAction" text="Criar Nova Conta">
         <VBox.margin>
            <Insets top="20.0" />
         </VBox.margin>
      </Button>
      <Button fx:id="btCancel" mnemonicParsing="false" onAction="#onBtCancelAction" text="Cancelar">
         <VBox.margin>
            <Insets top="5.0" />
         </VBox.margin>
      </Button>
   </children>
</VBox>
